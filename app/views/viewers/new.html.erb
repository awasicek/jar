<h1 style="font-family: Gloria Hallelujah; margin-left: 20px">Add a viewer to <%=Jar.find(params[:jar_id]).name%>.</h1>
<%= form_for @user, :url => create_viewer_path do |f| %>

    <div>
        <%= f.label :username, "Viewer's Username:", :style => "margin-left: 20px;" %>
        <%= f.text_field :username %>
    </div>

    <%= f.submit "Add as viewer", :style => "margin-left: 20px;", :class => "btn btn-success" %>

<% end %>
