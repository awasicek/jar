<h1>Create a new Memory.</h1>

<%= form_for @mem do |f| %>

    <div>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>
    <div>
        <%= f.label :date %>
        <%= f.text_field :date %>
    </div>

    <div>
        <%= f.label :photo, 'Optional: Attach a photo to this memory.' %>
        <%= f.file_field :photo %><br>
    </div>

    <%= f.submit "Create!" %>

<% end %>
